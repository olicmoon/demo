<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.samsung.sdpdemo.AccountSetup">

    <TextView
        android:text="Sdp Engine Setup:"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_width="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Alias: "
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginTop="20dp"
        android:id="@+id/alias_tv"
        android:layout_below="@id/title" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="alias"
        android:id="@+id/alias_edt"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/alias_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter password: "
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginTop="20dp"
        android:id="@+id/password_tv"
        android:layout_below="@id/alias_edt" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:id="@+id/password_edt"
        android:layout_below="@id/alias_edt"
        android:layout_toRightOf="@id/password_tv" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter reset token: "
            android:textStyle="bold"
            android:textColor="#ff000000"
            android:layout_marginTop="20dp"
            android:id="@+id/reset_tkn_tv"
            android:layout_below="@id/password_edt" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="min 32 chars"
            android:id="@+id/reset_tkn_edt"
            android:layout_below="@id/password_edt"
            android:layout_toRightOf="@id/password_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Chembar Path: "
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_marginTop="20dp"
        android:id="@+id/chamber_tv"
        android:layout_below="@id/reset_tkn_edt" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="path"
        android:id="@+id/chambar_edt"
        android:enabled="false"
        android:layout_below="@id/reset_tkn_edt"
        android:layout_toRightOf="@id/chamber_tv" />

    <LinearLayout
        android:layout_below="@id/chambar_edt"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/create_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Create"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Reset"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
